@import "../omarchy/current/theme/waybar.css";

* {
  background-color: @background;
  color: @foreground;

  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: CaskaydiaMono Nerd Font Propo;
  font-size: 12px;
}

.modules-left {
  margin-left: 8px;
}

.modules-right {
  margin-right: 8px;
}

#workspaces button {
  all: initial;
  padding: 0 6px;
  margin: 0 1.5px;
  min-width: 9px;
}

#workspaces button.empty {
  opacity: 0.5;
}

#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,
#clock,
#custom-power-menu {
  min-width: 12px;
  margin: 0 7.5px;
}

#custom-expand-icon {
  margin-right: 12px;
}

tooltip {
  padding: 2px;
}

#submap {
  background-color: rgb(22, 112, 172);
  padding: 0 3px;
  /* text-transform: capitalize; */
}

#submap.DEFAULT {
  background-color: rgb(11, 39, 57);
}
#pulseaudio.bluetooth,
#bluetooth.connected {
  color: #23D0CF;
}

#pulseaudio.muted {
  opacity: 0.5;
}

#battery.full {
  color: green;
}

#battery.normal {
  color: white;
}
#battery.warning {
  color: yellow;
}

#battery.critical {
  color: red;
}

#battery.charging {
  color: #23D0CF;
}
